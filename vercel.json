{
  "version": 2,
  "builds": [
    {
      "src": "dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "assessment/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/dashboard/(.*)",
      "dest": "/dashboard/$1"
    },
    {
      "src": "/assessment/(.*)",
      "dest": "/assessment/$1"
    },
    {
      "src": "/dashboard",
      "dest": "/dashboard/index.html"
    },
    {
      "src": "/assessment",
      "dest": "/assessment/index.html"
    },
    {
      "src": "/",
      "dest": "/dashboard/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/dashboard/(.*)",
      "destination": "/dashboard/index.html"
    },
    {
      "source": "/assessment/(.*)",
      "destination": "/assessment/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
